<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="btn_publicar">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_publicar</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:text">@string/btn_publicar</item>
        <item name="android:textColor">@color/colorCielo</item>
        <item name="android:layout_marginBottom">@dimen/margin_vetical</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="text_title" parent="text">

        <item name="android:layout_marginLeft">@dimen/textMarginLeft</item>
        <item name="android:layout_marginTop">@dimen/textMarginTop</item>
    <item name="android:textColor">@color/textColorTitle</item>
    <item name="android:textSize">@dimen/textSizeTitle</item>
    <item name="android:textStyle">bold</item>
</style>

    <style name="text_subtitle" parent="text" >
        <item name="android:textColor">@color/TextColorSubtitle</item>
        <item name="android:textSize">@dimen/textSizeSubtitle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">@dimen/textMarginLeft</item>
</style>
</resources>
